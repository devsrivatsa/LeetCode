class Solution:
    def characterReplacement(self, s: str, k: int) -> int:
        if len(s) == 1: 
            return 1
        l,r = 0,0
        hm = dict()
        max_win = 0
        while r < len(s):
            hm[s[r]] = hm.get(s[r], 0) + 1
            win_size = sum(hm.values())
            thresh = win_size - max(hm.values())
            if thresh > k:
                #descrease window from left
                hm[s[l]] -= 1
                l += 1
            max_win = max(max_win, r-l+1)
            r += 1
        return max_win

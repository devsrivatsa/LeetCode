
# sorting and then choosing any k items will give easy access to the min and max elements of that set of k elms.

class Solution:
    def minimumDifference(self, nums: List[int], k: int) -> int:
        l, r = 0, k-1
        min_diff = float('inf')
        nums.sort()
        while r < len(nums):
            min_diff = min(min_diff, nums[r] - nums[l])
            l, r = l+1, r+1
        return min_diff

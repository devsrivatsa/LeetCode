class Solution:
    def diameterOfBinaryTree(self, root: Optional[TreeNode]) -> int:
        diameters = []
        def dfs(root):
            if not root:
                return 0
            lp = dfs(root.left)
            rp = dfs(root.right)
            diameters.append(lp+rp)
            return 1+max(lp,rp)
        dfs(root)
        
        return max(diameters)

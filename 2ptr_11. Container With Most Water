class Solution:
    def maxArea(self, height: List[int]) -> int:
        #edge case
        if len(height) == 2:
            return min(height)
        #regular case
        l=0
        r=len(height)-1
        best_area=0
        while l < r:
            curr_area = min(height[l], height[r]) * (r-l)
            if curr_area > best_area:
                best_area = curr_area
                
            if height[l] < height[r]:
                l += 1
            else:
                r -= 1
        return best_area

class Solution:
    def lengthOfLongestSubstringKDistinct(self, s: str, k: int) -> int:
        if k == 0:
            return 0
        if len(s) == 1:
            return 1
        
        hm = dict()
        l,max_win = 0,0

        for r in range(len(s)):
            hm[s[r]] = 1 if hm.get(s[r], 0) == 0 else hm[s[r]]+1
            while len(hm) > k:
                hm[s[l]] -= 1
                if hm[s[l]] == 0:
                    del hm[s[l]]
                l += 1
            max_win = max(r-l+1, max_win)
        return max_win
        

class Solution:
    def totalFruit(self, fruits: List[int]) -> int:
        l,r, max_win = 0,0,0
        basket = dict()
        while r < len(fruits):
            basket[fruits[r]] = basket.get(fruits[r], 0) + 1
            while len(basket) > 2:
                basket[fruits[l]] -= 1 
                if basket[fruits[l]] == 0:
                    del basket[fruits[l]]
                l += 1
            max_win = max(max_win, r-l+1)
            r += 1
        return max_win
